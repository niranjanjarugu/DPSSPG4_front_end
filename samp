import com.fasterxml.jackson.annotation.JsonManagedReference;

import javax.persistence.*;
import java.io.Serializable;
import java.util.ArrayList;
import java.util.List;

@Entity
@Table(name = "companyOverview")
public class CompanyOverview implements Serializable {

 @Id
 @GeneratedValue(strategy = GenerationType.AUTO)
 private Long id;

 @Column(name="coCode", unique = true)
 private Integer coCode;
 private Integer assets;
 private Integer liabilities;
 private Integer premiums;
 private Integer capitalAndSurplus;
 private Integer netIncomeCY;
 private Integer netIncomePY;
 private Integer netIncomePY1;
